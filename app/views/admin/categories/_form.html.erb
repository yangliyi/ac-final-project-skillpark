<%= form_for @category, :url => admin_category_path(@category), method: :patch do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@category.errors.count, "error") %> prohibited this admin_category from being saved:</h2>

      <ul>
      <% @category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "分類：" %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :category_icon, "分類icon" %>
    <%= f.file_field :category_icon %>

    <% if @category.category_icon.exists? %>
      <%= check_box_tag "destroy_category_icon", "1" %> 刪除檔案
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
