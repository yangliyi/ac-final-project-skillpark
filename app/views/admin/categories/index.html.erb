<p id="notice"><%= notice %></p>

<h1>Listing Admin Categories</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Category Name</th>
      <th>Icon</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= image_tag (category.category_icon.url), style: "width: 100px; height: 100px; display: inline; border-radius: 100%;" %></td>
        <td><%= link_to 'Edit', edit_admin_category_path(category) %></td>
        <td><%= link_to 'Destroy', admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_admin_category_path %>
