<p id="notice"><%= notice %></p>

<h1>Listing Admin Profiles</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th>Description</th>
      <th>Location</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @admin_profiles.each do |admin_profile| %>
      <tr>
        <td><%= admin_profile.username %></td>
        <td><%= admin_profile.description %></td>
        <td><%= admin_profile.location.city %></td>
        <td><%= link_to 'Show', admin_profile %></td>
        <td><%= link_to 'Edit', edit_admin_profile_path(admin_profile) %></td>
        <td><%= link_to 'Destroy', admin_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

