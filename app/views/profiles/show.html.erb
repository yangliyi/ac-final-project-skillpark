<div class="row">
  <div class="col-sm-12">
    <div class="message">
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
        私人留言
      </button>
      <!-- Modal -->
      <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title" id="myModalLabel">想跟他說什麼呢</h4>
            </div>
            <div class="modal-body">
            <%= form_for Comment.new, url: profile_comments_path(@profile) do |f| %>
              <div class="form-group">
                <%= f.text_area :content, class: "form-control" %>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              <%= f.submit "回覆", class: "btn btn-default"%>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% if current_user %>
    <%= link_to favorite_profile_path(@profile), method: :post, class: "btn", id: "favorite", remote: true do %>
      <% if current_user.favorite_profile?(@profile) %>
        <span class="btn btn-success">取消收藏</span>
      <% else %>
        <span class="btn btn-default">收藏</span>
      <% end %>
      <span class="badge"><%= @profile.favorited_users.size %></span>
    <% end %>
<% end %>

<table>
  <tr>
    <td>
      <h3><span class="label label-primary"><%= @profile.username %></span></h3>
    </td>
  </tr>
  <tr>
    <td>
      <% if @profile.try(:photo) %>
        <%= image_tag (@profile.photo.url(:medium)), class: "user-photo" %>
      <% end %>
    </td>
  </tr>
</table>

<div class="row">
  <div class="col-sm-6" id="about-me">
    <h3><span class="label label-primary">關於我</span></h3>
    <h5><span class="label label-primary">出沒地：
      <% if @profile.try(:location_id) %>
        <%= @profile.location.city %>
      <% end %>
    </span></h5>
    <p>
      <% if @profile.try(:description) %>
        <%= @profile.description %>
      <% end %>
    </p>
  </div>
  <div class="col-sm-6" id="user-rating">
    <h3><span class="label label-primary">別人怎麼說</span></h3>
    評價
  </div>
</div>
<div class="row">
  <div class="col-sm-12" id="skills-want">
    <h3>我想學</h3>
    <h2>
      <% @profile.categories.each do |c| %>
      <span class="label label-info">
      <%= c.name %>
      </span>
      <% end %>
    </h2>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <div class="skills-have">
      <h3>我擅長</h3>
      <div class="row">
        <% @profile.user.skills.each do |s| %>
        <div class="col-sm-4">
          <div class="skill-block panel panel-info">
            <div class="skill-info">
              <div>
                  <%= link_to skill_path(s) do %>
                  <% if s.pictures.exists?%>
                  <div class="skill-img">
                  <%= image_tag (s.pictures.last.image.url) %>
                  </div>
                  <% else %>
                  無上傳圖片
                  <% end %>
                  <h5><%= s.name %></h5>
                <% end %>
              </div>
              <h4>
                <% s.categories.each do |c| %>
                <span class="label label-info">
                <%= c.name %>
                </span>
                <% end %>
              </h4>
            </div>
            <div class="row">
              <div class="col-sm-6">
                <h6><%= link_to s.user.profile.username, profile_path(s.user.profile)%> </h6>
              </div>
              <div class="col-sm-6">
                評價
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div id="publiccomments">
  <%= render 'publiccomments/publiccomment' %>
</div>
