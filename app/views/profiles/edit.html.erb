<h2>修改個人資料</h2>
<%= form_for @profile do |f| %>

  <div class="form-group">
    <%= f.label :username, "顯示名稱" %><br>
    <%= f.text_field :username, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :photo, "更新大頭照" %>
    <%= f.file_field :photo %>

    <% if @profile.photo.exists? %>
      <%= check_box_tag "destroy_photo", "1" %> 刪除原有大頭照
    <% end %>
  </div>

  <div class="form-group">
    <%= f.select :location_id, Location.all.map{ |x| [x.city, x.id] } %>
  </div>

  <div class="form-group">
    <%= f.label :description, "介紹一下自己吧，越詳細越容易收到 Deal 邀請喔！" %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <p>
    <%= f.submit '更新', class: "btn btn-default"%>
  </p>

<% end %>

