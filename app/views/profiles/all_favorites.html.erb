<div class="row">
  <div class="sol-sm-12">
    <div class="container">
      <div id="all-favorite-profiles">
        <% if @all_favorites.exists? %>
          <% @all_favorites.each do |p| %>
            <div>
              <%= link_to profile_path(p) do %>
                <h2><%= p.username %></h2>
                <span>
                  <% if p.location %>
                    <%= p.location.city %>
                  <% end %>
                </span>
                <div class="row">
                  <div class="col-sm-6">
                    <div class="user-photo">
                      <% if p.photo %>
                        <%= image_tag (p.photo.url(:medium)) %>
                      <% end %>
                    </div>
                  </div>
                  <div class="col-sm-6">
                    <div class="row">
                      <div class="col-sm-12">
                        <h2>哈囉，關於我：</h2>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-sm-12">
                        <div id="about-description">
                          <p>
                            <% if p.description %>
                              <%= p.description %>
                            <% end %>
                          </p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <h1 style="text-align: center; padding: 10px;"><%= '目前還沒有任何收藏唷！快把想學習的對象收藏起來吧！' %></h1>
        <% end %>
      </div>
    </div>
  </div>
</div>
