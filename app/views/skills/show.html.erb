<div class="row">
  <div class="col-sm-12">
    <div class="skill-page">
      <h3><%= @skill.name %></h3>
      <h4>
        <% @skill.categories.each do |c| %>
        <span class="label label-info">
        <%= c.name %>
        </span>
        <% end %>
      </h4>
      <h4>需自備的工具或軟體：<%= @skill.requirement %></h4>
      <p>介紹：<%= @skill.description%></p>
    </div>
  </div>
</div>
<div class="row">
  <% if @skill.pictures.exists? %>
    <% @skill.pictures.each do |p| %>
  <div class="col-sm-4">
    <div class="skill-img">
      <%= link_to image_tag(p.image.url), p.image.url %>
      <%=  %>
    </div>
  </div>
    <% end %>
  <% end %>
</div>