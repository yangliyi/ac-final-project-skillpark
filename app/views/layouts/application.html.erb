<!DOCTYPE html>
<html>
<head>
  <title>AcFinalProjectSkillpark</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width,initial-scale=1">
</head>
<body>
  <nav class="navbar navbar-inverse navbar-fixed-top" style="background-color: #2EB8B8; color: white">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to('SkillPark', skills_path, class: "navbar-brand") %>
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-right">
          <% if current_user %>
          <li>
            <%= link_to('登出', destroy_user_session_path, :method => :delete) %>
          </li>
          <li>
            <%= link_to profile_path(current_user.profile) do %>
              個人頁面<span class="glyphicon glyphicon-user" aria-hidden="true"></span>
            <% end %>
          </li>
          <li>
            <%= link_to edit_profile_path(current_user.profile) do %>
              修改個人資料<span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
              <% end %>
          </li>
          <% else %>
          <li>
            <%= link_to "Facebook 登入", user_omniauth_authorize_path(:facebook) %>
          </li>
          <% end %>
        </ul>
        <form class="navbar-form navbar-right">
          <input type="text" class="form-control" placeholder="Search...">
        </form>
      </div>
    </div>
  </nav>
  <div class="main container">
    <div class="row">
      <div class="col-sm-12">
        <% if flash[:notice].present? %>
          <div class="alert alert-success" role="alert">
            <%= flash[:notice] %>
          </div>
        <% end %>
        <% if flash[:alert].present? %>
          <div class="alert alert-danger" role="alert">
            <%= flash[:alert] %>
          </div>
        <% end %>

        <%= yield %>

      </div>
    </div>
  </div>
</body>
</html>
